{
  "name": "ReDirection Api",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://erpdev.boltun.local/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "setting.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "ReDirection Api"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "http://erpdev.boltun.local/*"
      ]
    }
  ]
}
